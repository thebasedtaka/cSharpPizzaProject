@page
@model cPizza.Pages.Pizza
@{
    ViewData["Title"] = "Pizza";
}

<h1>@ViewData["Title"]</h1>

<div class="text-center">
    <div class="mainText">
        <h1 class="display-4 text-capitalize text-black">Our most based pizza </h1>
        <h2 class="mainSubTitle">Chose a premade pizza or create one yourself</h2>
        <p class="smallText"><i>One pizza per order</i></p>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12 mb-5 mt-5 ">
                <div class="w-100 row makeYourOwnDiv">
                    <div class="col-4">
                        <img src="~/images/Pizzas/Create.png" class="w-100"/>
                    </div>
                    <div class="col-8 alig-items-center">
                        <div class="align-middle makeYourOwnText">
                            <h3 style="text-align:left;">Create your own pizza</h3>
                            <p style="text-align:left;">Make your own pizza with InstaServe</p>
                            <a class="btn btn-primary" style="float: left" asp-area="" asp-page="Forms/CustomPizza">Pizza Time</a>
                        </div>
                    </div>
                </div>
            </div>
            @foreach (var pizza in Model.fakePizzaDB)
                {
                    var imagePath = "~/images/Pizzas/" + (pizza.ImageTitle +".png");
                    <div class="col-4 mb-5">
                        <a class="pizza-img" asp-area="" asp-page="Checkout/Checkout" asp-route-PizzaName="@pizza.PizzaName" asp-route-ImageTitle="@pizza.ImageTitle" asp-route-PizzaPrice="@pizza.FinalPrice">
                        <img src="@imagePath" class="w-100" asp-append-version="true"/>
                        </a>
                        <br/>
                    </div>
                }

            
        </div>
    </div>
</div>