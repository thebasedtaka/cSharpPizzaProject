@page
@model cPizza.Pages.Checkout.Checkout
@{
    ViewData["Title"] = "Checkout";
}

<h1>@ViewData["Title"]</h1>
@{
    var imagePath = "~/images/Pizzas/" + (@Model.ImageTitle + ".png");
}

<h1>Your Order!</h1>
<div class="align-content-center">
    <div class="col-3 mx-auto mb-5">
        <img src=@imagePath class="w-100" asp-append-version="true"/>
        <p>Your @Model.PizzaName pizza is ready!</p>
        <p>Total price: @Model.PizzaPrice$</p>
        <br/>
        <a class="btn alert-primary mt-1 mx-auto" asp-area="" asp-page="ThankYou">Confirm Order</a>
    </div>
</div>